<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="12dp">

    <TextView
        android:id="@+id/remainderPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low priotity"
        android:textSize="10dp"/>


    <TextView
        android:id="@+id/remainderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/remainderPriority"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/remainderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/remainderTitle"
        android:text="Time/Date" />

    <CheckBox
        android:id="@+id/reminderCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"/>

</RelativeLayout>
